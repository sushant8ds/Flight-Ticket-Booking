# Django environment configuration for {{ app_name }}
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

# Django Core Settings
SECRET_KEY={{ django_secret_key }}
DEBUG={{ django_debug | lower }}
ALLOWED_HOSTS={{ django_allowed_hosts | join(',') }}

# Database Configuration
DATABASE_URL=sqlite:///{{ app_dir }}/db.sqlite3

# Static and Media Files
STATIC_ROOT={{ static_root }}
MEDIA_ROOT={{ media_root }}
STATIC_URL=/static/
MEDIA_URL=/media/

# Application Settings
DJANGO_SETTINGS_MODULE={{ django_settings_module }}

# Logging
LOG_LEVEL={{ log_level }}
LOG_DIR={{ log_dir }}

# Security Settings
{% if not django_debug %}
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY
{% endif %}

# Email Configuration (if needed)
{% if email_backend is defined %}
EMAIL_BACKEND={{ email_backend }}
{% if email_host is defined %}
EMAIL_HOST={{ email_host }}
EMAIL_PORT={{ email_port | default(587) }}
EMAIL_USE_TLS={{ email_use_tls | default(true) | lower }}
EMAIL_HOST_USER={{ email_host_user | default('') }}
EMAIL_HOST_PASSWORD={{ email_host_password | default('') }}
{% endif %}
{% endif %}

# Cache Configuration (if needed)
{% if cache_backend is defined %}
CACHE_BACKEND={{ cache_backend }}
{% endif %}

# Custom Application Settings
APP_NAME={{ app_name }}
APP_VERSION={{ app_version | default('1.0.0') }}
ENVIRONMENT={{ environment | default('production') }}