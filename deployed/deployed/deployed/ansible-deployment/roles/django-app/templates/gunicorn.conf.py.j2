# Gunicorn configuration for {{ app_name }}
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

import multiprocessing
import os

# Server socket
bind = "{{ gunicorn_bind }}"
backlog = 2048

# Worker processes
workers = {{ gunicorn_workers }}
worker_class = "sync"
worker_connections = 1000
timeout = {{ gunicorn_timeout }}
keepalive = {{ gunicorn_keepalive }}
max_requests = {{ gunicorn_max_requests }}
max_requests_jitter = {{ gunicorn_max_requests_jitter }}

# Restart workers after this many requests, to help prevent memory leaks
preload_app = True

# Logging
accesslog = "{{ log_dir }}/gunicorn_access.log"
errorlog = "{{ log_dir }}/gunicorn_error.log"
loglevel = "{{ log_level | lower }}"
access_log_format = '%(h)s %(l)s %(u)s %(t)s "%(r)s" %(s)s %(b)s "%(f)s" "%(a)s" %(D)s'

# Process naming
proc_name = "{{ app_name }}_gunicorn"

# Server mechanics
daemon = False
pidfile = "{{ app_dir }}/tmp/gunicorn.pid"
user = "{{ app_user }}"
group = "{{ app_group }}"
tmp_upload_dir = "{{ app_dir }}/tmp"

# SSL (if enabled)
{% if ssl_enabled | default(false) %}
keyfile = "{{ ssl_keyfile }}"
certfile = "{{ ssl_certfile }}"
{% endif %}

# Environment variables
raw_env = [
    'DJANGO_SETTINGS_MODULE={{ django_settings_module }}',
    'SECRET_KEY={{ django_secret_key }}',
    'DEBUG={{ django_debug | lower }}',
    'PYTHONPATH={{ app_dir }}',
]

# Worker process lifecycle
def when_ready(server):
    server.log.info("Server is ready. Spawning workers")

def worker_int(worker):
    worker.log.info("worker received INT or QUIT signal")

def pre_fork(server, worker):
    server.log.info("Worker spawned (pid: %s)", worker.pid)

def post_fork(server, worker):
    server.log.info("Worker spawned (pid: %s)", worker.pid)

def post_worker_init(worker):
    worker.log.info("Worker initialized (pid: %s)", worker.pid)

def worker_abort(worker):
    worker.log.info("Worker received SIGABRT signal")