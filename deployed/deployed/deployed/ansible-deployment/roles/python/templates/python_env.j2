# Python environment configuration for {{ app_name }}
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

{% for key, value in python_environment.items() %}
{{ key }}={{ value }}
{% endfor %}

# Application specific settings
APP_NAME={{ app_name }}
APP_DIR={{ app_dir }}
VENV_PATH={{ venv_path }}

# Django settings
DJANGO_SETTINGS_MODULE={{ app_name }}.settings
DEBUG={{ debug_mode | default(false) | lower }}
ALLOWED_HOSTS={{ allowed_hosts | join(',') if allowed_hosts is defined else 'localhost' }}